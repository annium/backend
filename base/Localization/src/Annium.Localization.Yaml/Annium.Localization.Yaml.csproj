<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <PackageId>Annium.Localization.Yaml</PackageId>
        <PackageVersion>0.1.0</PackageVersion>
        <Description>Localization library, uses plain file-based localization</Description>
        <TargetFramework>netcoreapp2.2</TargetFramework>
        <OutputType>Library</OutputType>
        <DebugType>portable</DebugType>
        <LangVersion>latest</LangVersion>
        <WarningsAsErrors>true</WarningsAsErrors>
        <IsPackable>true</IsPackable>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Localization" Version="2.2.0" />
        <PackageReference Include="YamlDotNet" Version="6.1.1" />
    </ItemGroup>
</Project>