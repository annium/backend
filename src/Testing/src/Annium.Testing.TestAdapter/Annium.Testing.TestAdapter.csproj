<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <PackageId>Annium.Testing.TestAdapter</PackageId>
        <PackageVersion>0.1.0</PackageVersion>
        <Description>Testing library adapter.</Description>
        <TargetFramework>netcoreapp2.2</TargetFramework>
        <OutputType>Library</OutputType>
        <DebugType>portable</DebugType>
        <LangVersion>latest</LangVersion>
        <WarningsAsErrors>true</WarningsAsErrors>
        <IsPackable>true</IsPackable>
        <DevelopmentDependency>true</DevelopmentDependency>
        <BuildOutputTargetFolder>build</BuildOutputTargetFolder>
    </PropertyGroup>
    <ItemGroup>
        <ProjectReference Include="../Annium.Testing/Annium.Testing.csproj" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.TestPlatform.TestHost" Version="16.2.0" />
    </ItemGroup>
    <ItemGroup Label="Package">
        <None Include="build\annium.testing.testadapter.props" PackagePath="build\netcoreapp2.2\annium.testing.testadapter.props" Pack="true" />
    </ItemGroup>
</Project>